{
    "compilerOptions": {
        "baseUrl": "./src/",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "allowJs": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "esModuleInterop": true,
        "moduleResolution": "node10"
    },
    "include": ["./src/**/*"]
}